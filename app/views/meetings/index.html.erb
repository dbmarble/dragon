<div class="fluid hero-unit">
<h1>Listing Meetings</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Logo url</th>
    <th>Reason</th>
    <th>Location</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>User</th>


  </tr>

<% @meetings.each do |meeting| %>
  <tr>
    <td><%= meeting.title %></td>
    <td><%= meeting.logo_url %></td>
    <td><%= meeting.reason %></td>
    <td><%= meeting.location %></td>
    <td><%= meeting.date %></td>
    <td><%= meeting.start_time %></td>
    <td><%= meeting.end_time %></td>
    <td><%= meeting.user_id %></td>
    <td>
      <%= link_to 'show', user_meeting_path(@user, meeting) %><br />
      <%= link_to 'Edit', edit_user_meeting_path(@user, meeting) %><br />
      <%= link_to 'Destroy', user_meeting_path(@user, meeting) ,
                  confirm: 'Are you sure?',
                  method: :delete %>
    </td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Meeting', new_user_meeting_path %>

</div>